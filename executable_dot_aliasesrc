#vim ft=shell
#
alias ls="exa"
alias ll="ls -lh"
alias l="ll -a"
alias la="ll -a"
alias lt="l --tree"
alias llt="ll --tree"
alias vimdiff="nvim -d"

# chezmoi
alias c="chezmoi"
alias ce="chezmoi edit"
alias ccd="chezmoi cd"
alias ca="chezmoi -v apply"

alias grub-update="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias news="newsboat"
alias gs="git status"
alias vim="nvim"
alias vi="nvim"
alias mutt="neomutt"
alias sub="subliminal download --language en"
alias tmux="tmux -f $HOME/.config/tmux/config"
alias mv="mv -v"
alias ..="cd .."
alias ...="cd .. && cd .."

alias ldmesg="dmesg --color=always | less -R"
alias t="~/run_tmux.sh"

# git
alias cur-branch="git branch --show-current | xclip"

# clip
alias xclip="xclip -selection clipboard"
alias rsync='rsync --info=progress2'

# docker
alias diesel-docker="docker system prune -af --volumes"

# corona
alias co-au="curl https://corona-stats.online/au"
alias co-it="curl https://corona-stats.online/it"
alias co="curl https://corona-stats.online/"

alias mailhog="docker run -p 8025:8025 -p 1025:1025 mailhog/mailhog"
alias redis="docker run -d --name redis-stack-server -p 6379:6379 redis/redis-stack-server:latest"

