#vim ft=shell
#
alias ls="lsd"
alias ll="ls -lh"
alias l="ll -a"
alias la="ll -a"
alias lt="l --tree"
alias llt="ll --tree"
alias vimdiff="nvim -d"
alias f="flatpak"
alias v="nvim"

# chezmoi
alias c="chezmoi"
alias ce="chezmoi edit"
alias ccd="chezmoi cd"
alias ca="chezmoi -v apply"

alias grub-update="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias news="newsboat"
alias gs="git status"
alias vim="nvim"
alias vi="nvim"
alias mutt="neomutt"
alias sub="subliminal download --language en"
alias mv="mv -v"
alias ..="cd .."
alias ...="cd .. && cd .."

alias ldmesg="dmesg --color=always | less -R"
alias t="tmuxifier"

# git
alias cur-branch="git branch --show-current"
alias tig="lazygit"

alias diary="cd ~/Dropbox/MyVault/ && nvim ."

# clip
alias xclip="xclip -selection clipboard"
alias rsync='rsync --info=progress2'

# docker
alias docker-clean="docker system prune -af --volumes"
alias mailhog="docker run -p 8025:8025 -p 1025:1025 mailhog/mailhog"
alias redis="docker run -d --name redis-stack-server -p 6379:6379 redis/redis-stack-server:latest"

# corona
alias co-au="curl https://corona-stats.online/au"
alias co-it="curl https://corona-stats.online/it"
alias co="curl https://corona-stats.online/"

# Ubuntu
alias up="sudo apt update && sudo apt upgrade -y; flatpak update"

# network
alias bee="ssh karim@192.168.0.110"
alias lateth="ssh karim@192.168.0.107"
alias latwifi="ssh karim@192.168.0.111"
alias cosmos="ssh karim@192.168.0.102"
alias feex="ssh app@feex.com.au"
